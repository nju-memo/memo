<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/indigo</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:navigationBarColor">@color/blue</item>
    </style>

    <style name="WhiteEditor" parent="Theme.AppCompat.Light">
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:colorActivatedHighlight">@color/white</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColorHint">@color/grey.light</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ExpandedTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/transparent</item>
    </style>

    <style name="CollapsedTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/transparent</item>
    </style>
</resources>

