<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/indigo</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:navigationBarColor">@color/blue</item>
    </style>

    <style name="CustomizedEditText" parent="@android:style/TextAppearance">
        <item name="android:textColorLink">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorActivatedHighlight">@color/colorPrimary</item>
    </style>

    <style name="FloatingHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ExpandedTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/transparent</item>
    </style>

    <style name="CollapsedTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>

